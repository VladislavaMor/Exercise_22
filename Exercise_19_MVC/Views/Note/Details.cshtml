@model Exercise_21.Models.Note

@{
    ViewData["Title"] = "Детальная информация";
}

<h1>Детальная информация</h1>

<div>
    <hr />
    <a asp-action="Edit" asp-route-id="@Html.DisplayFor(model => model.ID)">Редактировать</a>
    <dl class="row">
        <dt class = "col-sm-5">Фамилия</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-5">Имя</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-5">Отчество</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patronymic)
        </dd>
        <dt class = "col-sm-5">Телефон</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class = "col-sm-5">Адрес</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-5">Описание</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Вернуться к списку контактов</a>
</div>
